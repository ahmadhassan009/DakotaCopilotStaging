<?xml version="1.0" encoding="UTF-8"?>
<LightningMessageChannel xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Message Channel to pass Messages from Message box to Messages Container.</description>
    <isExposed>true</isExposed>
    <lightningMessageFields>
        <description>Boolean to Flag if the message from Bot or not.</description>
        <fieldName>isBot</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>Name of Sender of Message.</description>
        <fieldName>sender</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>Time at which message is sent.</description>
        <fieldName>time</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>Message content/text.</description>
        <fieldName>message</fieldName>
    </lightningMessageFields>
    <lightningMessageFields>
        <description>Current User Name.</description>
        <fieldName>userName</fieldName>
    </lightningMessageFields>
    <masterLabel>BotMessages</masterLabel>
</LightningMessageChannel>
